<div class="row clearfix" ng-controller="app.views.cuentas.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    Cuentas
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> Actualizar</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body table-responsive">                
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Descripción</th>
                            <th>Titulo</th>
                            <th>Naturaleza</th>
                            <th>Periodo</th>                            
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="registro in vm.registros">
                            <td>{{registro.codigo}}</td>
                            <td>{{registro.descripcion}}</td>
                            <td align="center">
                                <i class="material-icons" ng-if="registro.esTitulo" style="color:green;">check_box</i>
                                <i class="material-icons" ng-if="!registro.esTitulo" style="color:red;">indeterminate_check_box</i>
                            </td>
                            <td>  {{registro.naturalezaStr}}</td>
                            <td>{{registro.periodoNombre}}</td>                            
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.modificarModal(registro)"><i class="material-icons">create</i>Modificar</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.consultarModal(registro)"><i class="material-icons">create</i>Consultar</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.eliminarModal(registro)"><i class="material-icons">delete_sweep</i>Eliminar</a></li>                                    
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            <!-- ******************************************************** -->
            <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.crearModal()">
                <i class="material-icons">add</i>
            </button>
            </div>
        </div>
    </div>
</div>